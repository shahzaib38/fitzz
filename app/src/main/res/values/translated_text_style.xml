<?xml version="1.0" encoding="utf-8"?>
<resources>



    <style name="CopyImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:background">@drawable/copy_icon_style</item>

    </style>

    <style name="shareimage">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:layout_marginEnd">16dp</item>

        <item name="android:background">@drawable/shareimage_icon_style</item>

    </style>

    <style name="translated_edit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textCursorDrawable">@drawable/cursor_color</item>
        <item name="android:text">@string/test_string</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/translated_text_size</item>
        <item name="fontStyle">normal</item>
        <item name="fontFamily">@font/sf_pro_displat</item>

    </style>

    <style name="ok_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">@drawable/okbutton</item>
        <item name="android:text">@string/exit</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#FFFF</item>
        <item name="android:textSize">18sp</item>


    </style>

    <style name="translateId_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">@drawable/translate_button</item>
        <item name="android:text">@string/translate</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#FFFF</item>
        <item name="android:textSize">18sp</item>


    </style>

    <style name="pdf_style">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:src">@drawable/picture_as_pdf</item>
          <item name="android:visibility">gone</item>

    </style>


    <style name="translate_style">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:background">@drawable/translate_icon_style</item>
        <item name="android:visibility">visible</item>

    </style>

    <string name="translate">Translate</string>
</resources>