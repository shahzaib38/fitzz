<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    >


        <data
            class="DemoDataBinding">

            <variable
                name="viewModel"
                type="imagetrack.app.trackobject.viewmodel.InAppViewModel" />
        </data>


    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <TableLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:stretchColumns="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TableRow
                android:background="@drawable/rowone"
                >


                <TextView
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="@string/benefits" />


                <TextView
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="@string/upgrade" />


            </TableRow>

            <TableRow
                android:background="@drawable/rowone"

                >

                <TextView
                    android:gravity="start"
                    android:padding="3dp"
                    android:text="@string/image_to_text" />

                <ImageView
                    android:gravity="center"
                    android:padding="3dp"
                    android:src="@drawable/check_icon" />

            </TableRow>

            <TableRow
                android:background="@drawable/rowone"

                >

                <TextView
                    android:gravity="start"
                    android:padding="3dp"
                    android:text="@string/translates_languages"
                    />

                <ImageView
                    android:gravity="center"
                    android:padding="3dp"
                    android:src="@drawable/check_icon" />

            </TableRow>

            <TableRow
                android:background="@drawable/rowone"

                >

                <TextView
                    android:gravity="start"
                    android:padding="3dp"
                    android:text="@string/unlimited_usage"
                    />

                <ImageView
                    android:gravity="center"
                    android:padding="3dp"
                    android:src="@drawable/check_icon" />

            </TableRow>

        </TableLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>


